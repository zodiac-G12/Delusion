{
    "manifest_version": 2,
    "name": "Delusion",
    "description": "",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*" ],
        "js": ["content_scripts.js"],
        "css": ["content_scripts.css"]
    }],
    "permissions": [
        "storage",
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_title": "Delusion",
        "default_icon": "icons/icon.png",
        "default_popup": "popup/popup.html"
    }
}

